#include <stdio.h>
#include <stdlib.h>

int matriz[10][10];

void carregaMatriz(){
    
    for(int i = 0; i<10; i++){
        for(int j = 0; j<10; j++){
            matriz[i][j] = 1;
        }
        
    }
    matriz[1][1] = 0;
    matriz[0][2] = 0;
    matriz[7][8] = 0;
}


void lerMatriz(int n, int m){
    
    for(int i = 0; i<n; i++){
        for(int j = 0; j<m;j++){
            printf("%d ",matriz[i][j]);
        }
        printf("\n");
    }
}

void detectarBuraco(int n, int m){
    int contador = 0;
    for(int i = 0; i<n; i++){
        for(int j = 0; j<m; j++){
            if(matriz[i][j] == 0 && matriz[i-1][j] == 1 && matriz[i][j-1] == 1 &&
            matriz[i][j+1] == 1 && matriz[i+1][j] == 1)
            contador++;
        }
        
    }
    printf("%d", contador);
}


int main(){
    carregaMatriz();
    lerMatriz(10,10);
    detectarBuraco(10,10);
}
